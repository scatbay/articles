{
    "name": "scatbay/articles",
    "description": "Multi-user Articles Library.",
    "type": "project",
    "homepage": "https://github.com/scatbay/articles",
    "license": "GPL-3.0+",
    "authors": [
        {
            "name": "Snakevil Zen",
            "email": "zsnakevil@gmail.com"
        }
    ],
    "require": {
        "ext-ctype": "*",
        "ext-pdo_sqlite": "*",
        "ext-zlib": "*",
        "snakevil/zen": "@dev",
        "zen/web-application": "@dev",
        "zen/model": "^0.1.2",
        "zen/data-pdo": "^0.1.0",
        "zen/view": "^0.1.0",
        "cebe/markdown": "^1.1",
        "twig/twig": "^1.24"
    },
    "autoload": {
        "psr-4": {
            "scatbay\\articles\\": "lib/"
        }
    },
    "repositories": {
        "packagist": {
            "type": "composer",
            "url": "https://packagist.phpcomposer.com"
        }
    },
    "config": {
        "vendor-dir": "include",
        "bin-dir": "bin"
    },
    "scripts": {
        "css:main": "sass -t compressed share/scss/main.scss:share/static/main.min.css",
        "css": "@css:main",
        "js:main": "uglifyjs share/js/*.js -m -c -o share/static/main.min.js",
        "js": "@js:main",
        "docker:build": "docker build --tag registry.cn-hangzhou.aliyuncs.com/scatbay/articles .",
        "docker": "@docker:build"
    }
}
